<Window x:Class="Chapter_11_Application_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chapter_11_Application_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid Margin="5">
        <StackPanel>
        <CheckBox x:Name="useAwaitSync" IsChecked="True" Content="Use Await/Async" Margin="5"/>
        <Button x:Name="countButton" Content="start counting" HorizontalAlignment="Left" 
                Click="CountButton_Click" Margin="5"/>
            <TextBlock x:Name="Progress" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
